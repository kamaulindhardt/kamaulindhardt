issn = {15731596},
journal = {Mitigation and Adaptation Strategies for Global Change},
keywords = {Agroecology,Agroforestry models,Climate shift,Multipurpose trees,Resilience,Tree architecture},
number = {5},
pages = {18},
title = {{Climate change adaptation in and through agroforestry: four decades of research initiated by Peter Huxley}},
url = {https://doi.org/10.1007/s11027-021-09954-5},
volume = {26},
year = {2021}
}
